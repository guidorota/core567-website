  <!-- sitename / url -->
  <text
    font-family="{{ fontBody }}, sans-serif"
    font-size="24"
    font-weight="500"
    fill="{{ text }}"
    letter-spacing="-0.5"
  >
    <tspan x="80" y="80">{{ siteUrl }}</tspan>
  </text>

  <!-- date -->
  <text
    font-family="{{ fontBody }}, sans-serif"
    font-size="24"
    font-weight="500"
    fill="{{ text }}"
    letter-spacing="-1"
  >
    <tspan x="160" y="{{ verticalStartingPoint - 120 }}">
      {{ post.date | formatDate('DD / MM / YYYY') }}
    </tspan>
  </text>

  <!-- title -->
  <text
    id="text"
    font-family="{{ fontDisplay }}, sans-serif"
    font-size="80"
    font-weight="900"
    fill="{{ text }}"
    letter-spacing="-3"
  >
    {% for line in titleInLines %}
      <tspan x="160" y="{{ verticalStartingPoint - 20 + loop.index0 * 85 }}"> {{ line }} </tspan>
    {% endfor %}
  </text>
